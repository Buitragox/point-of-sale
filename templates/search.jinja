{% extends "base.jinja" %} 
{% block title %}Search and Edit{% endblock %} 
{% block body %}
<div class="container">
    <form action="/admin/search" method="POST">
        {% with messages = get_flashed_messages() %}
            {% if messages %}
                <br />
                {% for message in messages %}
                    <div class="alert alert-primary alert-dismissible" role="alert">
                        <strong>{{ message }}</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
        <h1>Buscar y editar</h1>
        <select class="form-select" aria-label="Default select example" id="option" name="option">
            <option selected>Seleccione la opción de búsqueda</option>
            <option value="1">Id</option>
            <option value="2">Nombre</option>
        </select>
        <div class="form-floating">
            <input type="text" class="form-control" id="value" name="value" placeholder="Busqueda" required>
            <label for="value">Value</label>
        </div>
        <button class="btn-lg btn-primary" type="submit">Buscar</button> 
        <a href="/admin/"> <button type="button" class="btn-lg btn-primary">Regresar</button></a>
        <h4>{{message}}</h4>
    </form>
</div>

{% endblock %}